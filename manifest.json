{
    "manifest_version": 3,
    "name": "Price Drop Tracker",
    "version": "1.0.0",
    "description": "Tracks price drops of shopping cart items on different stores.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "<all_urls>"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "action": {
      "default_popup": "js/popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/Cart.js", "js/models/Product.js", "js/models/Store.js"]
      }
    ]
  }
  