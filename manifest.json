{
    "manifest_version": 3,
    "name": "Price Drop Tracker",
    "version": "1.0.0",
    "description": "Tracks price drops of shopping cart items on different stores.",
    "permissions": ["webRequest","webRequestBlocking","tabs","webNavigation","scripting","activeTab"],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "./src/js/background.js",
      "type":"module"
    },
    "action": {
      "default_popup": "./src/js/popup/popup.html"
    }
  }
  